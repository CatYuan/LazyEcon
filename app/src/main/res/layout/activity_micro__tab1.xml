<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    tools:context=".Micro_Tab1">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="-37dp"
        android:layout_marginRight="-37dp"
        android:layout_toStartOf="@+id/textView9"
        android:layout_toLeftOf="@+id/textView9"
        android:background="@android:color/transparent"
        android:text="@string/Elasticity"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginTop="0dp"
        android:background="#9999ff"
        android:text="@string/Type"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="-1dp"
        android:background="#ccccff"
        android:hint="@string/ChangeQ"
        android:inputType="numberDecimal"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/textView9"
        android:layout_width="84dp"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:background="#ccccff"
        android:hint="@string/ChangeP"
        android:inputType="numberDecimal"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#ff9966"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/tvanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginBottom="237dp"
        android:textSize="30sp" />
</RelativeLayout>
