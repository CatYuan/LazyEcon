<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabFragment1">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price_change_edit_text"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="-44dp"
        android:layout_toEndOf="@+id/price_change_edit_text"
        android:onClick="submitText"
        android:text="@string/submit"
        android:layout_marginLeft="-2dp"
        android:layout_toRightOf="@+id/price_change_edit_text" />

    <EditText
        android:id="@+id/price_change_edit_text"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demand_change_edit_text"
        android:layout_alignParentStart="true"
        android:hint="Enter Δ Price" />

    <EditText
        android:id="@+id/demand_change_edit_text"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="184dp"
        android:hint="Enter Δ Qd" />

</RelativeLayout>