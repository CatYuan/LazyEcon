<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".macro_tab1">

    <TextView
        android:id="@+id/GDP_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="44dp"
        android:text="@string/calculate_gdp"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/GDP_approach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="115dp"
        android:text="@string/GDP_approach" />

    <Spinner
        android:id="@+id/GDP_approach_spinner"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/GDP_approach"
        android:layout_marginStart="-114dp"
        android:layout_toEndOf="@+id/macro_tab1_GDP_editText1"
        android:text="@string/Type" />

    <EditText
        android:id="@+id/macro_tab1_GDP_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="188dp"
        android:hint="Consumption"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/macro_tab1_GDP_editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/macro_tab1_GDP_editText1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="0dp"
        android:hint="Investments"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/macro_tab1_GDP_editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/macro_tab1_GDP_editText1"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/GDP_description"
        android:hint="Government"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/macro_tab1_GDP_editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="341dp"
        android:hint="Net Exports"
        android:inputType="numberDecimal"
        android:textSize="12sp" />

    <Button
        android:id="@+id/macro_tab1_submit_button"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/GDP_approach"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="268dp"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/macro_tab1_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/GDP_description"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="231dp"
        android:text="this is the result" />

</RelativeLayout>